@model PartPageListingModel

@{
    ViewData["Title"] = "All Parts";
}

<h2>
    @ViewData["Title"]
    <a href="/parts/create">Add Part</a>
</h2>

<ul>
    <li>
        <a href="/parts/all?page=@Model.PreviousPage">Previous Page</a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li>
            <a href="/parts/all?page=@i">@i</a>
        </li>
    }
</ul>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Supplier</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
        <tr>
            <td>@part.Name</td>
            <td>@part.Price.ToString("F2")</td>
            <td>@part.Quantity</td>
            <td>@part.SupplierName</td>
            <td>
                <a href="/parts/edit/@part.Id" class="btn btn-danger">Edit</a>
                <a href="/parts/delete/@part.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
