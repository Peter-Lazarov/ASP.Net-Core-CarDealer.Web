@model AllCustomersModel

@{
    ViewData["Title"] = "All Customer";
}

<h2>All Customers</h2>
<h3>Ordered in @(Model.OrderDirection.ToString().ToLower()) direction</h3>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birthday</th>
            <th>Is Young driver</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.BirthDate.ToShortDateString()</td>
                <td>@(customer.IsYoungDriver ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>